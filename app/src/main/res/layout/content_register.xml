<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.visitmsu.visitmsu.RegisterActivity"
    tools:showIn="@layout/activity_register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/edit_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" ชื่อ-นามสกุล"
            android:textColorHint="@color/colorhin"
            android:ellipsize="start"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"/>

        <EditText
            android:id="@+id/edit_usernameR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" ชื่อผู้ใช้งาน"
            android:textColorHint="@color/colorhin"
            android:ellipsize="start"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_person_black_24dp"/>

        <EditText
            android:id="@+id/edit_passwordR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" password"
            android:textColorHint="@color/colorhin"
            android:inputType="textPassword"
            android:ellipsize="start"
            android:drawableLeft="@drawable/ic_lock_black_24dp"/>

        <EditText
            android:id="@+id/edit_emailR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" อีเมล์"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorhin"
            android:ellipsize="start"
            android:drawableLeft="@drawable/ic_email_black_24dp"/>

        <EditText
            android:id="@+id/edit_AddressR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" ที่อยู่"
            android:textColorHint="@color/colorhin"
            android:inputType="text|textMultiLine"
            android:ellipsize="start"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:lines="3" />

        <EditText
            android:id="@+id/edit_TelR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" เบอร์โทร"
            android:textColorHint="@color/colorhin"
            android:inputType="phone"
            android:ellipsize="end"
            android:drawableLeft="@drawable/ic_phone_black_24dp"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  สมัครใช้งาน"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/White"
            android:textSize="@dimen/fonsizeM"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_person_add_black_24dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contaiberprogressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:background="#99000000">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</RelativeLayout>
