<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/cardview"
        card_view:cardBackgroundColor="@color/White">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/container_list_food_padding"
            android:paddingLeft="@dimen/container_list_food_padding"
            android:paddingRight="@dimen/container_list_food_padding">

            <TextView
                android:id="@+id/name_building"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_building"
                android:text="SimpleName"
                android:textColor="@color/colorfont"
                android:textSize="@dimen/fonsizeM" />

            <TextView
                android:id="@+id/text_sub_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_building"
                android:layout_toRightOf="@+id/img_building"
                android:text="SimpleSubName"
                android:textSize="@dimen/fonsizeN" />


            <TextView
                android:id="@+id/content_search_distane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_sub_name"
                android:layout_toEndOf="@+id/img_building"
                android:gravity="left"
                android:text="ระยะทาง: 00 km"
                android:textSize="@dimen/ontent_distane_textSize" />

            <TextView
                android:id="@+id/textview_time_walk"
                android:layout_width="@dimen/widtextAddressmain"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_search_distane"
                android:layout_toEndOf="@+id/img_building"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="00:00 นาที"
                android:textSize="@dimen/ontent_distane_textSize"
                android:drawableLeft="@drawable/ic_directions_walk_black_24dp"/>

            <TextView
                android:id="@+id/textview_time_bike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_time_walk"
                android:layout_toEndOf="@+id/img_building"
                android:gravity="left"
                android:text=" 00:00 นาที"
                android:textSize="@dimen/ontent_distane_textSize"
                android:drawableLeft="@drawable/ic_directions_bike_black_24dp"/>

            <TextView
                android:id="@+id/textview_time_drawing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_time_bike"
                android:layout_toEndOf="@+id/img_building"
                android:gravity="left"
                android:text=" 00:00 นาที"
                android:textSize="@dimen/ontent_distane_textSize"
                android:drawableLeft="@drawable/ic_directions_car_black_24dp"/>




            <ImageView
                android:id="@+id/img_building"
                android:layout_width="@dimen/img_show_width"
                android:layout_height="@dimen/img_show_height"
                android:layout_marginRight="@dimen/img_show_marginRight"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/textview_time_drawing" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
