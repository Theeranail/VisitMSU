<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@color/White">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="@dimen/img_show_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/img_show_marginRight"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/tetxtview_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_sub_main"
                android:layout_toRightOf="@+id/img_detail"
                android:text="  xx-xxxxxxxx"
                android:layout_marginRight="@dimen/img_show_marginRight"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:textColor="@color/colorfont"
                android:textSize="@dimen/fonsizeM"  />


            <TextView
                android:id="@+id/textview_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tetxtview_tel"
                android:layout_marginTop="@dimen/ontent_distane_marginTop"
                android:layout_toRightOf="@+id/img_detail"
                android:gravity="left"
                android:text="  Simple Email"
                android:textColor="@color/colorfont"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:textSize="@dimen/fonsizeN" />

            <TextView
                android:id="@+id/textview_sub_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Simple name"
                android:textColor="@color/colorfont"
                android:drawableLeft="@drawable/ic_business_black_24dp"
                android:textSize="@dimen/fonsizeN"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/img_detail" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
